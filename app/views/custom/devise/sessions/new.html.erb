<% provide :title do %><%= t("devise_views.sessions.new.title") %><% end %>


<%= render "devise/omniauth_form", action: "sign_in" %>
<br>
<div class="separator">o</div>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 column auth-field">
    <%= f.text_field :login, autofocus: true, placeholder: t("devise_views.sessions.new.login_label") %>
    </div>

    <div class="small-12 column auth-field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t("devise_views.sessions.new.password_label") %>
    <%= link_to t("devise_views.shared.links.new_password"), new_password_path(resource_name), class: "float-right" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="small-12 column auth-text">
    <%= f.check_box :remember_me, label: t("devise_views.sessions.new.remember_me") %>
    </div>
  <% end -%>

    <div class="small-12 medium-12 column small-centered">
      <%= f.submit(t("devise_views.sessions.new.submit"), class: "button expanded classic-submit") %>
      <p class="text-center auth-text">
        <%= sanitize(t("devise_views.shared.links.signup",
            signup_link: link_to(t("devise_views.shared.links.signup_link"), new_user_registration_path))) %>
      </p>
    </div>
  </div>
<% end %>


