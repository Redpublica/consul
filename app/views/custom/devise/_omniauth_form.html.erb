<% if oauth_logins.any? %>
  <div class="row">
    <div class="small-12 column">
      <div class="margin-bottom text-center">
        <strong class="auth-text"><%= t("omniauth.info.#{action}") %></strong>
        <p class="auth-text"><%= t("omniauth.info.with_sn") %></p>
      </div>
    </div>

    <% oauth_logins.each do |login| %>
      <% if login === :google_oauth2 %>
        <div class="small-12 medium-6 large-4 column social-login-button end">
        <div class="button-google">
          <a class="google-btn" tabindex="0" data-method="post" href="/users/auth/google_oauth2">
              <div class="google-icon-wrapper">
                <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg">
              </div>
              <span class="btn-text">Google</span>
            </a>
            </div>
        </div>
      <% end %>
      <% if login === :facebook %>
      <div class="small-12 medium-6 large-4 column social-login-button end">
        <div class="button-facebook">
          <a class="facebook-btn" tabindex="0" data-method="post" href="/users/auth/facebook">
            <div class="facebook-icon-wrapper">
              <svg aria-hidden="true" class="facebook-icon" width="18" height="18" viewBox="0 0 18 18"><path d="M3 1a2 2 0 00-2 2v12c0 1.1.9 2 2 2h12a2 2 0 002-2V3a2 2 0 00-2-2H3Zm6.55 16v-6.2H7.46V8.4h2.09V6.61c0-2.07 1.26-3.2 3.1-3.2.88 0 1.64.07 1.87.1v2.16h-1.29c-1 0-1.19.48-1.19 1.18V8.4h2.39l-.31 2.42h-2.08V17h-2.5Z" fill="#fff"></path></svg>
            </div>
            <span class="btn-text">Facebook</span>
          </a>
        </div>
      </div>
      <% end %>
      <% if login === :twitter %>
       <div class="small-12 medium-6 large-4 column social-login-button end">
        <div class="button-twitter">
          <a class="twitter-btn" tabindex="0" data-method="post" href="/users/auth/twitter">
            <div class="twitter-icon-wrapper">
              <i class="fab fa-twitter fa-lg twitter-icon"></i>
            </div>
            <span class="btn-text">Twitter</span>
          </a>
        </div>
       </div>
      <% end %>
    <% end %>
  </div>
<% end %>
