<header>



  <div id="offcanvas-full-screen" class="offcanvas-full-screen" data-off-canvas data-transition="overlap">
  <div class="offcanvas-full-screen-inner">
    <button class="offcanvas-full-screen-close" aria-label="Close menu" type="button" data-close>
      <span aria-hidden="true"><%= image_tag(image_path_for("logo_vertical.png"), alt: setting["org_name"]) %></span>
    </button>

    <ul class="offcanvas-full-screen-menu">
    <li>
    <%= link_to t("layouts.header.home"), "http://redpublica.pe/" %>
    </li>
    <li>
    <%= link_to t("layouts.header.about"), "https://redpublica.pe/contacto/" %>
    </li>
    <% if not user_signed_in? %>
    <li>
    <%= link_to t("layouts.header.signup"), new_user_registration_path %>
    </li>
    <% end %>
    <li>
    <%= link_to t("layouts.header.megaphone"), root_path %>
    </li>
    <li>
    <% if user_signed_in? %>
    <%= link_to t("layouts.header.my_account_link"), account_path %>
    <% else %>
    <%= link_to t("layouts.header.login"), new_user_session_path %>
    <% end %>
    </li>
    </ul>
  </div>
</div>

<div class="off-canvas-content" data-off-canvas-content>

<div class="row">
<div class="small-12 column">
<div class="top-bar">

<div class="top-bar-title">
<%= link_to "http://redpublica.pe/", accesskey: "0" do %>
  <%= image_tag(image_path_for("logo_header.png"), class: "float-left", alt: setting["org_name"]) %>
  <%= image_tag(image_path_for("logo_icon.png"), class: "float-left header-icon", alt: setting["org_name"]) %>
  <% end %>
  </div>

  <div class="top-bar-social">
  <%= link_to "https://www.facebook.com/Redpublica.pe", accesskey: "0" do %>
    <%= image_tag(image_path_for("facebook-logo.svg"), class: "float-left", alt: setting["org_name"]) %>
    <% end %>
    <%= link_to "https://www.instagram.com/redpublica.pe/", accesskey: "0" do %>
      <%= image_tag(image_path_for("instagram-logo.svg"), class: "float-left", alt: setting["org_name"]) %>
      <% end %>
      <%= link_to "https://twitter.com/Redpublicape", accesskey: "0" do %>
        <%= image_tag(image_path_for("twitter-logo.svg"), class: "float-left", alt: setting["org_name"]) %>
        <% end %>
        <%= link_to root_path, accesskey: "0" do %>
          <%= image_tag(image_path_for("email-logo.svg"), class: "float-left", alt: setting["org_name"]) %>
        <% end %>
      </div>

      <div class="top-bar-links">
        <div class="menu">
        <%= link_to t("layouts.header.home"), "http://redpublica.pe/" %>
        <%= link_to t("layouts.header.about"), "https://redpublica.pe/contacto/" %>
        <% if not user_signed_in? %>
        <%= link_to t("layouts.header.signup"), new_user_registration_path %>
        <% end %>
        <%= link_to t("layouts.header.megaphone"), root_path %>
        <% if user_signed_in? %>
        <%= link_to t("layouts.header.my_account_link"), account_path %>
        <% else %>
        <%= link_to t("layouts.header.login"), new_user_session_path %>
        <% end %>
          </div>
        </div>
    <div>
    <span class="float-right">
      <span class="menu-icon dark" data-toggle="offcanvas-full-screen"></span>
    </span>
    </div>

  </div>
  </div>
</div>

</div>


</header>
