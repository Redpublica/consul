<footer>
  <div>
    <div class="row">
      <div class="footer-image small-12 medium-3 large-3 column">
        <h1 class="logo">
        <%= image_tag(image_path_for("logo_footer.png"), class: "float-left", alt: setting["org_name"]) %>
        </h1>
      </div>
    </div>
  </div>

  <div class="hide-for-small-only">
  <div class="footer-header-wrapper">
    <div class="row footer-headers">
      <div class="small-3 large-3 columns">
        <small>
        <%= t("layouts.footer.site") %>
        </small>
      </div>
      <div class="small-3 large-3 columns">
        <small>
        <%= t("layouts.footer.contact") %>
        </small>
      </div>
      <div class="small-3 large-3 columns">
        <small>
        <%= t("layouts.footer.newsletter") %>
        </small>
      </div>
      <div class="small-3 large-3 columns">
        <small>
        <%= t("layouts.footer.rules") %>
        </small>
      </div>
    </div>
  </div>

  <div>
    <div class="row footer-links">
      <div class="small-3 large-3 columns">
        <ul class="no-bullet">
        <li><%= link_to t("layouts.footer.home"), "https://redpublica.pe/" %></li>
        <li><%= link_to t("layouts.footer.about"), "https://redpublica.pe/sobre-redpublica/" %></li>
        <li><%= link_to t("layouts.footer.create_profile"), new_user_registration_path %></li>
        <li><%= link_to t("layouts.footer.megaphone"), root_path %></li>
        <% if user_signed_in? %>
        <li><%= link_to t("layouts.footer.my_account_link"), account_path %></li>
        <% else %>
        <li><%= link_to t("layouts.footer.login"), new_user_session_path %></li>
        <% end %>
        </ul>
      </div>

      <div class="small-3 large-3 columns">
      <ul class="no-bullet">
        <li><%= link_to t("layouts.footer.info"), "https://redpublica.pe/contacto/" %></li>
      </ul>
      </div>
      <div class="small-3 large-3 columns">
        <span><%= t("layouts.footer.subscribe") %></span>
        <br><br>
        <input id="subscriberEmail" type="text" placeholder="<%= t("layouts.footer.email") %>">
        <button type="button"><%= t("layouts.footer.involve") %></button>
      </div>
      <div class="large-3 columns">
      <ul class="no-bullet">
        <li><%= link_to t("layouts.footer.privacy"), "https://redpublica.pe/politica-privacidad/" %></li>
        <li><%= link_to t("layouts.footer.terms"), "https://redpublica.pe/terminos-de-uso/" %></li>
        <li><%= link_to t("layouts.footer.faqs"), "https://redpublica.pe/preguntas-frecuentes/" %></li>
      </ul>
      </div>
    </div>
  </div>
  </div>


  <div class="show-for-small-only">
    <div class="row footer-columns">
      <div class="small-12 large-3 columns">
        <div class="footer-columns__header">
          <small>
          <%= t("layouts.footer.site") %>
          </small>
        </div>
        <div>
          <ul class="no-bullet">
          <li><%= link_to t("layouts.footer.home"), "https://redpublica.pe/" %></li>
          <li><%= link_to t("layouts.footer.about"), "https://redpublica.pe/sobre-redpublica/" %></li>
          <li><%= link_to t("layouts.footer.create_profile"), new_user_registration_path %></li>
          <li><%= link_to t("layouts.footer.megaphone"), root_path %></li>
          </ul>
        </div>
      </div>
      <div class="small-12 large-3 columns">
        <div class="footer-columns__header">
          <small>
          <%= t("layouts.footer.contact") %>
          </small>
        </div>
        <div>
          <ul class="no-bullet">
            <li><%= link_to t("layouts.footer.info"), "https://redpublica.pe/contacto/" %></li>
          </ul>
        </div>
      </div>
      <div class="small-12 large-3 columns">
        <div class="footer-columns__header">
          <small>
          <%= t("layouts.footer.newsletter") %>
          </small>
        </div>
        <div>
          <span><%= t("layouts.footer.subscribe") %></span>
          <input id="subscriberEmail" type="text" placeholder="<%= t("layouts.footer.email") %>">
          <button type="button"><%= t("layouts.footer.involve") %></button>
        </div>
      </div>
      <div class="small-12 large-3 columns">
        <div class="footer-columns__header">
          <small>
          <%= t("layouts.footer.rules") %>
          </small>
        </div>
        <div>
          <ul class="no-bullet">
          <li><%= link_to t("layouts.footer.privacy"), "https://redpublica.pe/politica-privacidad/" %></li>
          <li><%= link_to t("layouts.footer.terms"), "https://redpublica.pe/terminos-de-uso/" %></li>
          <li><%= link_to t("layouts.footer.faqs"), "https://redpublica.pe/preguntas-frecuentes/" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>


<div class="subfooter-wrapper">
  <div class="subfooter row">
    <div class="small-12 medium-8 column">
      <%= t("layouts.footer.copyright", year: Time.current.year) %>
    </div>
  </div>
</div>
</footer>
