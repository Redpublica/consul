<footer>
  <div class="row">
    <div class="small-12 medium-4 large-4 column">
      <h1 class="logo">
      <%= image_tag(image_path_for("logo_footer.png"), class: "float-left", alt: setting["org_name"]) %>
      </h1>
    </div>
  </div>

  <div class="row footer-headers">
    <div class="small-4 large-3 columns">
      <small>
      <%= t("layouts.footer.site") %>
      </small>
    </div>

    <div class="small-4 large-3 columns">
      <small>
      <%= t("layouts.footer.newsletter") %>
      </small>
    </div>
    <div class="small-4 large-3 columns">
      <small>
      <%= t("layouts.footer.social_media") %>
      </small>
    </div>
    <div class="large-3 columns">
    </div>
  </div>

  <div class="row footer-links">
    <div class="small-4 large-3 columns">
      <ul class="no-bullet">
        <li><%= link_to t("layouts.footer.tabloid"), page_path("privacy") %></li>
        <li><%= link_to t("layouts.footer.advertisement"), page_path("conditions") %></li>
        <li><%= link_to t("layouts.footer.announces"), page_path("accessibility") %></li>
        <li><%= link_to t("layouts.footer.attention"), page_path("accessibility") %></li>
        <li><%= link_to t("layouts.footer.points"), page_path("accessibility") %></li>
      </ul>
    </div>

    <div class="small-4 large-3 columns">
      <input type="text" placeholder="<%= t("layouts.footer.email") %>">
      <button type="button"><%= t("layouts.footer.involve") %></button>
    </div>
    <div class="small-4 large-3 columns">
      <ul class="no-bullet">
        <li><%= link_to t("layouts.footer.facebook"), page_path("privacy") %></li>
        <li><%= link_to t("layouts.footer.instagram"), page_path("conditions") %></li>
        <li><%= link_to t("layouts.footer.youtube"), page_path("accessibility") %></li>
        <li><%= link_to t("layouts.footer.twitter"), page_path("accessibility") %></li>
      </ul>
    </div>
    <div class="large-3 columns">
    </div>
  </div>

  <div class="subfooter row">
    <div class="small-12 medium-8 column">
      <%= t("layouts.footer.copyright", year: Time.current.year) %>
    </div>


  </div>
</footer>
