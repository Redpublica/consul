<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= render "layouts/common_head", default_title: setting["org_name"] %>
    <%= render "layouts/meta_tags" %>
    <%= raw setting["html.per_page_code_head"] %>
  </head>

  <body class="auth-page">
    <%= raw setting["html.per_page_code_body"] %>
    <div class="wrapper">

      <div class="small-12 medium-12 column">
        <div class="row">
          <div class="small-12 medium-7 large-5 small-centered column">
            <div class="auth-form margin auth-title">
              <%= link_to root_path, accesskey: "0" do %>
              <%= image_tag(image_path_for("logo_header.png"), class: "float-center", alt: setting["org_name"]) %>
              <% end %>
            </div>
          </div>
          <div class="small-12 medium-7 large-6 small-centered column">
            <div class="auth-form margin auth-card">
            <%= render "layouts/flash" %>

            <%= yield %>
            </div>
          </div>
          <div class="small-12 medium-7 large-6 small-centered column">
            <div class="auth-confirmation-help-link">
              <div class="text-center">
                <%= link_to t("devise_views.shared.links.new_confirmation"), new_confirmation_path(resource_name) %><br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="footer">
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
